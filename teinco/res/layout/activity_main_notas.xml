<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" 
android:layout_width="match_parent"
android:layout_height="match_parent" 
android:orientation="vertical"   
android:background="@drawable/fondo6"
    >

        <TextView
            android:id="@+id/nombre_estudiante"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ESTUDIANTE"
            android:textColor="#104897" />
        
        <TextView
            android:id="@+id/nombre_programa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PROGRAMA"
            android:textColor="#104897" />
        <TextView
            android:id="@+id/semestre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SEMESTRE"
            android:textColor="#104897" />

           
       <Spinner
                android:id="@+id/spinner_asignaturas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
               
                android:text="@string/texto_spinner_asignaturas" />
        
         <Spinner
         android:layout_width="match_parent"
         android:layout_height="wrap_content"    
         android:text="@string/texto_spinner_corte"
         android:id="@+id/spinner_corte"
         android:entries="@array/cortes"
        />
    
      
       
      
